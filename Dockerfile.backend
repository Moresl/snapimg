# 后端服务
FROM python:3.10-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    libpng-dev \
    libjpeg-dev \
    libwebp-dev \
    pngquant \
    && rm -rf /var/lib/apt/lists/*

# 安装 Python 依赖
COPY serve/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 复制后端代码
COPY serve/app/ ./app/
COPY serve/main.py ./

EXPOSE 8001

CMD ["python", "main.py"]
